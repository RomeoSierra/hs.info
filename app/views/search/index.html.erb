

<%= form_tag card_index_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", name: nil %>
<% end %>

<table>
<% @cards.each do |c| %>
  <tr>
    <td><%= link_to c.card_name, card_path(c.set_sym) %></td>
    <td><%= c.set %> (<%= c.rarity.chars.first.capitalize %>)</td>
    <td><%= c.align.to_s.capitalize %> <%= c.card_type.to_s.capitalize %></td>
    <td>(<%= c.cost %>) <%= c.power %>/<%= c.toughness %></td>
    <td><%= c.card_text %></td>
  </tr>
<% end %>
</table>
